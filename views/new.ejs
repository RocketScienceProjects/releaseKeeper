<% include partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Enter the details of the new deployment</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/release/new" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="org" placeholder="org name">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="package" placeholder="packageVersion">
        </div>
        <div class="form-group">
           <input type="text" class="form-control" name="date" placeholder="timestamp of deployment">
        </div>
        <div class="form-group">
         <button class="btn btn-lg btn-primary btn-block">Submit</button>
       </div>
      </form>
            <a href="/">Go Back</a>
    </div>
  </div>

</div>

